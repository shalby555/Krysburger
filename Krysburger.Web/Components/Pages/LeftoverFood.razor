@page "/leftoverfood"

@if (_leftoverFood.Count > 0)
{
<div style="display:flex; justify-content: flex-start; flex-wrap:wrap;">    
@foreach (var l in _leftoverFood)
{
     <ProductCard LeftoverFood="@l"/>   
}
 </div>
}
else
{
     <h3>Остатков Нут</h3>
